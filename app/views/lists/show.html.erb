<h1> <%=@list.name %>  </h1>
      <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>

<div class="container">
  <div class="d-inline-flex p-2">
      <%= link_to "Add movie(bookmark)", new_list_bookmark_path(@list) %>
  </div>
  <div class="d-inline-flex p-2">
      <%= link_to "Back to my lists", lists_path %>
  </div>
    <div class="d-inline-flex p-2">
    <%= link_to "Delete", list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?"}%>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-3">
      <div class="bg-white rounded shadow h-50">
        <% @list.bookmarks.each do |bookmark| %>
        <img src="<%= bookmark.movie.poster_url %>" alt="" class="img-thumbnail">
        <%=bookmark.comment%>
      <% end %>
      </div>
    </div>
  </div>
</div>


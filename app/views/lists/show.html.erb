<h1> <%=@list.name %>  </h1>

<div class="container">
  <div class="row">
    <div class="col">
      <%= link_to "Add movie(bookmark)", new_list_bookmark_path(@list) %>
      <%= link_to "Back to my lists", lists_path %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 col-sm-6 mb-4">
      <div class="bg-white rounded shadow h-100">
        <%= @list.bookmarks.each do |bookmark| %>
        <img src="<%= bookmark.movie.poster_url %>" alt="" class="img-thumbnail">
      <% end %>
      </div>
    </div>
  </div>
</div>
